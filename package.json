{
  "name": "mnodejs",
  "version": "1.0.0",
  "description": "MNode is a basic skeleton written in JavaScript with expressive, elegant syntax. We believe development must be an enjoyable and creative experience to be truly fulfilling. MNode takes the pain out of development by easing common tasks used in many applications. MNode is accessible, powerful, and provides tools required for large, robust applications.",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production pm2 start server.js",
    "test": "_mocha --timeout 100000 --exit --report lcovonly -- -R spec",
    "lint": "eslint --fix --config .eslintrc.json \"**/*.js\"",
    "dev": "TZ=Asia/Kolkata nodemon index.js",
    "fresh": "npm run clean && npm run seed",
    "clean": "node clean.js",
    "seed": "node ./system/core/seeding/seeder.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beraujjwal/mnodejs.git"
  },
  "author": "Ujjwal Bera",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/beraujjwal/mnodejs/issues"
  },
  "homepage": "https://github.com/beraujjwal/mnodejs#readme",
  "dependencies": {
    "auto-bind": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "case": "^1.6.3",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^6.3.0",
    "express-router-group": "^0.1.4",
    "i18n": "^0.14.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "mongo-seeding": "^3.7.1",
    "mongoose": "^5.13.12",
    "mongoose-delete": "^0.5.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.0",
    "otp-generator": "^4.0.0",
    "pluralize": "^8.0.0",
    "pug": "^3.0.2",
    "uuid": "^8.3.2",
    "validatorjs": "^3.22.1",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "faker": "^5.1.0",
    "jest": "^27.5.1",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.14"
  },
  "_moduleAliases": {
    "@root": ".",
    "@core": "system/core",
    "@model": "app/models",
    "@controller": "app/controllers",
    "@middleware": "app/middlewares",
    "@service": "app/services",
    "@helper": "app/helpers",
    "@validation": "app/validations"
  }
}
